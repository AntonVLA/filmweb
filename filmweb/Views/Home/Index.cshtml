@model filmweb.ViewModels.HomeModel
@{
    ViewData["Title"] = "Home Page";
}
<script rel="stylesheet" src="~/js/angular-1.1.5.js"></script>
<style type="text/css">
    .solo-table-sort-asc > .solo-column-arrow {
        position: relative;
        top: 10px;
        margin-left: 5px;
        border-color: black transparent;
        border-style: solid;
        border-width: 5px 5px 0px 5px;
        height: 0px;
        width: 0px;
    }

    .solo-table-sort-desc > .solo-column-arrow {
        position: relative;
        top: -10px;
        margin-left: 5px;
        border-color: black transparent;
        border-style: solid;
        border-width: 0px 5px 5px 5px;
        height: 0px;
        width: 0px;
    }

    .solo-table-column-cursor {
        cursor: pointer;
    }
</style>


<div class="text-center">
    <h1 class="display-4">Фильмы</h1>
    <div ng-app="tableapp" ng-controller="filmsCtrl">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark table-hover text-center">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" class="text-center" sort-by="name">Название</th>
                    <th scope="col" class="text-center" sort-by="genre">Жанр</th>
                    <th scope="col" class="text-center" sort-by="produser">Режиссёр</th>
                    <th scope="col" class="text-center" sort-by="Actors">Актёры</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in products">
                    <td>{{ item.Id }}</td>
                    <td>{{ item.Name }} </td>
                    <td>{{ item.Genre }} </td>
                    <td>{{ item.Produser }} </td>
                    <td>{{ item.Actor }} </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
<script>
    var app = angular.module('tableapp', []);

    app.controller('filmsCtrl', ['$scope', '$http', function ($scope, $http) {
        $scope.products = [];
        $http.get('/api/GetAllFilms').then(function (response) {
            $scope.products = response.data;
        }, function (errResponse) {
            alert(errResponse);
        });
    }]);
</script>
